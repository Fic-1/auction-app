extends base

block content
    section.position-relative.py-4.py-xl-5
        .container
            .row.mb-5
                .col-md-8.col-xl-6.text-center.mx-auto
                    h1 Log in
                    p.w-lg-50
                        | Curae hendrerit donec commodo hendrerit egestas tempus, turpis facilisis nostra nunc. Vestibulum dui eget ultrices.
            .row.d-flex.justify-content-center
                .col-md-6.col-xl-4(style='margin-top: -29px;')
                    .card.mb-5
                        .card-body.d-flex.flex-column.align-items-center
                            .bs-icon-xl.bs-icon-circle.bs-icon-primary.bs-icon.my-4
                                svg.bi.bi-person(xmlns='http://www.w3.org/2000/svg', width='1em', height='1em', fill='currentColor', viewBox='0 0 16 16')
                                    path(d='M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z')
                            form.text-center.form--login(method='post', style='border-style: none;')
                                .mb-3
                                    input.form-control(type='email', name='email', id='email' placeholder='Email')
                                .mb-3
                                    input.form-control(type='password', name='password', id='password' placeholder='Password')
                                .mb-3
                                    button.btn.btn-primary.d-block.w-100(type='submit') Login
                                a(href='/forgot-password')
                                    p.text-muted(style='margin-bottom: 7px;') Forgot your password?
                                div
                                    p.text-muted(style='margin-bottom: 0px;margin-top: 1px;')
                                        | Dont have an account?
                                        a(href='/signup', style='padding-left: 10px;') Sign up!