extends base

block content
    section.position-relative.py-4.py-xl-5
        .container
            .row.d-flex.justify-content-center
                .col-md-6.col-xl-4.align-items-center(style='height: 80dvh;')
                    .card.mb-5
                        .card-body.d-flex.flex-column.align-items-center
                            form.text-center.form--forgot-password(method='post', style='border-style: none;')
                                .mb-3
                                    input.form-control(type='email', name='email', id='email' placeholder='Email')
                                .mb-3
                                    button.btn.btn-primary.d-block.w-100#forgotPasswordBtn(type='submit') Reset password
                                div
                                    p.text-muted(style='margin-bottom: 0px;margin-top: 1px;')
                                        | Dont have an account?
                                        a(href='/signup', style='padding-left: 10px;') Sign up!