extends base
block append head 
    link(rel='stylesheet', href='/assets/css/style.css')
    link(rel='stylesheet', href='/assets/css/editPage.css')
block content
    .container(style="margin-top: 3dvh")
        .edit-product
            .edit-product--image 
                img.product-image(src=`/background_img/${product.coverImage}`)
                input.form-control.form-control-sm(type='file', accept='image/*', name='photo') 
            .edit-product--data
                form.user-data
                        .row(style='margin-bottom: 25px;text-align: left;')
                            .row
                                .col-md-8.text-start
                                    .mb-3
                                        label.form-label(for='email')
                                            strong= `Seller: ${product.seller.name}`
                            .col-md-12
                                .mb-3
                                    label.form-label(for='name')
                                        strong Product name
                                    input.form-control(type='text',id='name', placeholder=`${product.name}`, name='name', required='')
                                .mb-3
                                    label.form-label(for='name')
                                        strong Description
                                    textarea.form-control(rows="5" cols="60" name="text" placeholder=`${product.description}`)
                                .mb-3
                                    label.form-label(for='name')
                                        strong= `End date: ${product.endDate}`
                                    br
                                    input(type='date',id='endDate', placeholder=`Enter new date`, name='endDate', required='')
                                .mb-3.multiple-upload 
                                    label.form-label(for='name')
                                        strong Upload product pictures:
                                    br
                                    .dashed_upload
                                        .wrapper
                                            .drop
                                                .cont
                                                    i.fa.fa-cloud-upload
                                                    .tit
                                                        | Drag &amp; Drop
                                                    .desc
                                                        | or
                                                    .browse
                                                        | click here to browse
                                                output#list
                                                input#files(multiple='' name='files[]' type='file')


